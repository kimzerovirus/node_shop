<%- include ('../top')%>
<%- include ('../nav')%>
<style>
    .login-tit {
        text-align: center;
        font-weight: 700;
        font-size: 2em;
        margin-top: 50px;
    }

    #loginF {
        margin: 0 auto;
        width: 60%;
        height: auto;
    }

    .loginF-color {
        color: #999 !important;
        font-size: 14px;
    }
</style>


<section class="container" style="margin-top:120px">
    <div class="board">
        <div class="btn">
            <ul>
                <li><a href="#tab01 " class="login_selected">회원 로그인</a></li>
                <li><a href="#tab02">비회원 로그인</a></li>
            </ul>
        </div>
        <div class="bWrap">
            <div class="member">
                <form action="login" id="loginF" name="loginF" method="POST">
                    <input type="text" name="userid" id="userid" placeholder="아이디">
                    <input type="password" name="pwd" id="pwd" placeholder="비밀번호">

                    <nav class="login-Nav fNav">
                        <ul>
                            <li><a href="#" class="loginF-color">회원가입</a></li>
                            <li><a href="#" class="loginF-color">아이디찾기</a></li>
                            <li class="last"><a href="#" class="loginF-color">비밀번호 찾기</a></li>
                        </ul>
                    </nav>
                    <button class="loginBt" id="memberLogin" type="button">로그인</button>
                </form>
            </div>
            <div class="non-member">
                <form action="" id="loginB" name="loginB">
                    <input type="text" name="ordername" id="ordername" placeholder="주문자명">
                    <input type="text" name="orderNum" id="orderNum" placeholder="주문번호">
                    <input type="password" name="orderpwd" id="orderpwd" placeholder="비밀번호">
                    <nav class="login-Nav fNav">
                        <ul>
                            <li><a href="#" class="loginF-color">회원가입</a></li>
                            <li><a href="#" class="loginF-color">아이디찾기</a></li>
                            <li class="last"><a href="#" class="loginF-color">비밀번호 찾기</a></li>
                        </ul>
                    </nav>
                    <button class="loginBt" type="button">비회원 주문 조회</button>
                </form>
            </div>
        </div>
    </div>

    <hr class="divider" />


</section>


<script src="/js/jquery-3.5.1.min.js"></script>
<script>
    $(function () {
        $('.bWrap div').not(':first').hide();
        $('.btn ul li a').click(function () {
            $('.btn ul li a').removeClass('login_selected');
            $(this).addClass('login_selected');
            var i = $(this).parent().index();
            $('.bWrap div').fadeOut(0);
            $('.bWrap div').eq(i).fadeIn(0);
        });

        $('#memberLogin').click(function () {
            document.loginF.submit();
        })
    });
</script>

<%- include ('../foot')%>